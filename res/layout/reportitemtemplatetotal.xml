<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape"
        android:layout_width="100dp"
        android:layout_height="80dp">

        <TextView
            android:text="x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewreportitemtemplatetotalP1"
            android:gravity="center"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:textSize="12sp" />

        <TextView
            android:text="x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewreportitemtemplatetotalP2"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_dark"
            android:singleLine="true" />

        <TextView
            android:text="x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewreportitemtemplatetotalP3"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@android:color/holo_blue_dark"
            android:singleLine="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="@drawable/shapetoolbar"
            android:layout_margin="2dp"
            android:layout_height="10dp">

            <TextView
                android:text="x"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textViewreportitemtemplatetotalP41"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:layout_marginStart="2dp"
                android:textSize="10sp" />

            <TextView
                android:text="x"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textViewreportitemtemplatetotalP42"
                android:layout_weight="1"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:layout_marginEnd="2dp"
                android:textSize="10sp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>